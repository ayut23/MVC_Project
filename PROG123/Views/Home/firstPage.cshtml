@{
    Layout = null;
}

@*included PersonModel*@

@model PersonModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>First Page</title>
</head>
<body>

    @*initiated the secondPage Method from Homecontroller*@
    @*takes information/input*@

    @using (Html.BeginForm("secondPage", "Home", FormMethod.Post))
    {
            <label for="FName">First Name:</label>
            <input type="text" name="FName" id="FName" value="@Model.FName">

            <br>

            <label for="LName">Last Name:</label>
            <input type="text" name="LName" id="LName" value="@Model.LName">

            <br>

            <label for="Email">Email:</label>
            <input type="email" name="Email" id="Email" value="@Model.Email">

            <br>

            <label for="Phone">Phone:</label>
            <input type="text" name="Phone" id="Phone" value="@Model.Phone">

            <br>

            <label for="Address">Address:</label>
            <input type="text" name="Address" id="Address" value="@Model.Address">

            <br>

            <label for="UserName">Username:</label>
            <input type="text" name="UserName" id="UserName" value="@Model.UserName">

            <br>

            <label for="Password">Password:</label>
            <input type="password" name="Password" id="Password" value="@Model.Password">

            <br>

            <input type="submit" value="Submit">
    }
</body>
</html>
